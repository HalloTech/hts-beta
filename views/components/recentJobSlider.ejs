<style>
    /* Hide scrollbar but keep scrolling */
    .scroll-hide::-webkit-scrollbar {
        display: none;
    }
    .scroll-hide {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
  </style>
  
  <h2 class="text-2xl font-bold text-left pl-9 mt-3">Recent Jobs</h2>  
  
  <div class="w-full overflow-x-auto scroll-hide scroll-smooth bg-gray-100 py-5" id="scrollContainer">
    <div class="flex flex-nowrap gap-5 px-5">
      
      <% let posts = [
          { image: "HTS-2.jpg", name: "Amit Sharma", username: "@amit_dev", link: "#" },
          { image: "work-game-banner.jpg", name: "Priya Patel", username: "@priya_codes", link: "#" },
          { image: "HTS-4.jpg", name: "Rahul Verma", username: "@rahul_js", link: "#" },
          { image: "Deals.jpeg", name: "Sneha Kapoor", username: "@sneha_uiux", link: "#" },
          { image: "HTS-HOME2.jpg", name: "Vikram Singh", username: "@vikram_ai", link: "#" },
          { image: "work-game-banner.jpg", name: "Neha Srivastava", username: "@neha_stack", link: "#" },
          { image: "Deals.jpeg", name: "Siddharth Jain", username: "@sid_python", link: "#" }
      ]; %>
  
      <% posts.forEach((post) => { %>
          <a href="<%= post.link %>" 
             class="w-[300px] sm:w-[400px] md:w-[500px] lg:w-[600px] min-w-[250px] rounded-lg overflow-hidden flex-shrink-0 p-4 transition-transform duration-300 cursor-pointer">
              
              <div class="flex items-center gap-3">
                  <img src="/icons/man.png" alt="Profile" class="w-10 h-10 rounded-full object-cover">
                  <div>
                      <h3 class="text-sm font-bold"><%= post.username %></h3>
                      <p class="text-xs text-gray-500"><%= post.name %> | Full Stack Developer</p>
                  </div>
              </div>
  
              <!-- Image -->
              <div class="w-full flex justify-center my-3">
                  <img src="/images/<%= post.image %>" alt="Post" 
                       class="w-full h-[300px] object-cover rounded-md">
              </div>
  
              <h2 class="text-md font-bold">How To do bug fixing?</h2>
  
              <div class="flex justify-between items-center mt-3">
                  <p class="text-sm text-gray-500">Read More..</p>
  
                  <div class="flex gap-3 text-gray-600">
                      <button class="hover:text-red-500 transition duration-200">
                          <i class="fas fa-heart"></i>
                      </button>
                      <button class="hover:text-blue-500 transition duration-200">
                          <i class="fas fa-share"></i>
                      </button>
                      <button class="hover:text-green-500 transition duration-200">
                          <i class="fas fa-bookmark"></i>
                      </button>
                  </div>
              </div>
          </a>
      <% }); %>
    </div>
  </div>
  